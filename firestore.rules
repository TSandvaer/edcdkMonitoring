rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /monitoring/{document=**} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    match /frontpage-monitoring/{document=**} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
  }
}
